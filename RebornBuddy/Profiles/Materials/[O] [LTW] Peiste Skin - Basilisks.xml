<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Peiste Skin to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [LTW] Peiste Skin - Basilisks</Name>
	<BehaviorDirectory>../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Basilisk -->

		<If Condition="(ItemCount(5306) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 48">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 48 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 47">
				<LogMessage Message="You need more Peiste Skin!" />
				<If Condition="not IsOnMap(147)">
					<If Condition="Managers.WorldManager.HasAetheryteId(21)">
						<TeleportTo Name="Camp Bluefog" AetheryteId="21" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(21)">
						<Travel To="147" />
					</If>
				</If>
				<Grind grindRef="Peiste_Skin" while="Core.Player.ClassLevel &lt; 61" />
			</If>
		</If>
		<If Condition="(ItemCount(5306) == &MatCount;) or (ItemCount(5306) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Peiste Skin!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Peiste_Skin">
			<Hotspots>
				<Hotspot Radius="90" XYZ="-38.70899, 8.032553, 264.7068" name="Basilisk" />
				<Hotspot Radius="90" XYZ="-12.08592, 23.12105, 176.4942" name="Basilisk" />
				<Hotspot Radius="90" XYZ="59.83527, 28.55268, 75.27204" name="Basilisk" />
				<Hotspot Radius="90" XYZ="153.1548, 36.94136, 2.497776" name="Basilisk" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="304" />
			</TargetMobs>
			<MinLevel>48</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
</Profile>