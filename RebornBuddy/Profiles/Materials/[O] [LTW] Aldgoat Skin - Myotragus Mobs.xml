				<Hotspot Radius="90" XYZ="-133.9463, -36.92102, 155.7602" name="Myotragus Mobs" />
				<Hotspot Radius="90" XYZ="-219.3104, -29.13601, 274.6151" name="Myotragus Mobs" />
				<Hotspot Radius="90" XYZ="-237.4143, -31.71992, 334.5888" name="Myotragus Mobs" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="273" />
				<TargetMob Id="274" />
			</TargetMobs>
			<MinLevel>15</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
</Profile>