<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Aldgoat Skin to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [LTW] Aldgoat Skin - Myotragus Mobs</Name>
	<BehaviorDirectory>../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Myotragus Billy, Myotragus Nanny -->

		<If Condition="(ItemCount(5296) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 15">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 15 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 14">
				<LogMessage Message="You need more Aldgoat Skin!" />
				<If Condition="not IsOnMap(145)">
					<If Condition="Managers.WorldManager.HasAetheryteId(18)">
						<TeleportTo Name="Camp Drybone" AetheryteId="18" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(18)">
						<Travel To="145" />
					</If>
				</If>
				<Grind grindRef="Aldgoat_Skin" while="Core.Player.ClassLevel &lt; 61" />
			</If>
		</If>
		<If Condition="(ItemCount(5296) == &MatCount;) or (ItemCount(5296) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Aldgoat Skin!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Aldgoat_Skin">
			<Hotspots>
				<Hotspot Radius="90" XYZ="-327.5747, -41.72263, 29.25056" name="Myotragus Mobs" />
