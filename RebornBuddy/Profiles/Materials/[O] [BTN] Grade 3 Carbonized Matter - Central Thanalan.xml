<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "9000"> <!-- Grade 3 Carbonized Matter to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [BTN] Grade 3 Carbonized Matter - Central Thanalan</Name>
	<BehaviorDirectory>../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Grade 3 Carbonized Matter -->

		<RunCode Name="Botanist" />
		<WaitTimer WaitTime="3" />
		<If Condition="Core.Me.CurrentJob == ClassJobType.Botanist">
			<If Condition="(ItemCount(5601) &lt; &MatCount;)">
				<If Condition="Core.Player.ClassLevel &lt; 50">
					<LogMessage Message="You do not meet the minimum level requirement." />
					<LogMessage Message="Please reach level 50 Botanist or higher." />
					<StopBot />
				</If>
				<If Condition="Core.Player.ClassLevel &gt; 49">
					<LogMessage Message="You need more Grade 3 Carbonized Matter!" />
					<If Condition="not IsOnMap(141)">
						<If Condition="Managers.WorldManager.HasAetheryteId(53)">
							<TeleportTo Name="Black Brush Station" AetheryteId="53" />
						</If>
						<If Condition="not Managers.WorldManager.HasAetheryteId(53)">
							<Travel To="141" />
						</If>
					</If>
					<NoCombatMoveTo Name="Farming Area" XYZ="332.6265, -15.65481, -15.12926" />
					<Gather while="(ItemCount(5601) &lt; &MatCount;)">
						<GatherObject>Mature Tree</GatherObject>
						<HotSpots>
							<HotSpot Radius="250" XYZ="382.7507, -17.89353, -95.69798" name="Mature Trees" />
						</HotSpots>
						<ItemNames>
							<ItemName>Grade 3 Carbonized Matter</ItemName>
						</ItemNames>
						<GatheringSkillOrder>
							<GatheringSkill SpellName="Blessed Harvest" TimesToCast="1" />
						</GatheringSkillOrder>
					</Gather>
				</If>
			</If>
		</If>

		<If Condition="(ItemCount(5601) == &MatCount;) or (ItemCount(5601) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Grade 3 Carbonized Matter!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
		</If>

	</Order>
	<GrindAreas>
	</GrindAreas>
	<CodeChunks>
		<CodeChunk Name="Botanist">
			<![CDATA[ 
				ff14bot.Managers.ChatManager.SendChat("/gs change 22");
		]]>
		</CodeChunk>
	</CodeChunks>
</Profile>