<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Cinnamon to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [BTN] Cinnamon - North Shroud</Name>
	<BehaviorDirectory>../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Cinnamon -->

		<If Condition="(ItemCount(4828) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 4">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 4 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 3">
				<LogMessage Message="You need more Cinnamon!" />
				<If Condition="not IsOnMap(154)">
					<If Condition="Managers.WorldManager.HasAetheryteId(7)">
						<TeleportTo Name="Fallgourd Float" AetheryteId="7" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(7)">
						<Travel To="154" />
					</If>
				</If>
				<NoCombatMoveTo Name="Farming Area" XYZ="237.4472, -24.42558, 296.1129" />
				<Gather while="(ItemCount(4828) &lt; &MatCount;)">
					<GatherObject>Mature Tree</GatherObject>
					<HotSpots>
						<HotSpot Radius="90" XYZ="237.4472, -24.42558, 296.1129" name="Mature Tree" />
						<HotSpot Radius="90" XYZ="251.5844, -19.66966, 269.3652" name="Mature Tree" />
					</HotSpots>
					<ItemNames>
						<ItemName>Cinnamon</ItemName>
					</ItemNames>
					<GatheringSkillOrder>
						<GatheringSkill SpellName="Leaf Turn" ActionId="225" TimesToCast="1" />
					</GatheringSkillOrder>
				</Gather>
			</If>
		</If>
		<If Condition="(ItemCount(4828) == &MatCount;) or (ItemCount(4828) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Cinnamon!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
</Profile>