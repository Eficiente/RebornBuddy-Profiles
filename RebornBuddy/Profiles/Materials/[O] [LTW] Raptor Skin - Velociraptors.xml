<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Raptor Skin to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [LTW] Raptor Skin - Velociraptors</Name>
	<BehaviorDirectory>../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Velociraptor -->

		<If Condition="(ItemCount(5310) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 32">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 32 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 31">
				<LogMessage Message="You need more Raptor Skin!" />
				<If Condition="not IsOnMap(180)">
					<If Condition="Managers.WorldManager.HasAetheryteId(16)">
						<TeleportTo Name="Camp Overlook" AetheryteId="16" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(16)">
						<Travel To="180" />
					</If>
				</If>
				<Grind grindRef="Raptor_Skin" while="Core.Player.ClassLevel &lt; 61" />
			</If>
		</If>
		<If Condition="(ItemCount(5310) == &MatCount;) or (ItemCount(5310) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Raptor Skin!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Raptor_Skin">
			<Hotspots>
				<Hotspot Radius="90" XYZ="0.8782252, 69.47547, -201.4247" name="Velociraptor" />
				<Hotspot Radius="90" XYZ="-57.80463, 64.73162, -302.053" name="Velociraptor" />
				<Hotspot Radius="90" XYZ="-181.6216, 74.71216, -267.0354" name="Velociraptor" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="412" />
			</TargetMobs>
			<MinLevel>32</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
</Profile>