<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Boar Hide to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [LTW] Boar Hide - Wild Hogs</Name>
	<BehaviorDirectory>../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Wild Hog -->

		<If Condition="(ItemCount(5303) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 45">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 45 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 44">
				<LogMessage Message="You need more Boar Hide!" />
				<If Condition="not IsOnMap(153)">
					<If Condition="Managers.WorldManager.HasAetheryteId(5)">
						<TeleportTo Name="Quarrymill" AetheryteId="5" />
					</If>
					<If Condition="Managers.WorldManager.HasAetheryteId(6)">
						<TeleportTo Name="Camp Tranquil" AetheryteId="6" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(6)">
						<Travel To="153" />
					</If>
				</If>
			</If>
		</If>
		<If Condition="(ItemCount(5303) == &MatCount;) or (ItemCount(5303) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Boar Hide!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

		<Grind grindRef="Boar_Hide" while="Core.Player.ClassLevel &lt; 61" />

	</Order>
	<GrindAreas>
		<GrindArea name="Boar_Hide">
			<Hotspots>
				<Hotspot Radius="90" XYZ="370.7033, 0.4990824, 152.5462" name="Wild Hog" />
				<Hotspot Radius="90" XYZ="476.0181, 0.5554026, 186.5246" name="Wild Hog" />
				<Hotspot Radius="90" XYZ="383.4095, -1.090251, 126.7354" name="Wild Hog" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="15" />
			</TargetMobs>
			<MinLevel>45</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
</Profile>