<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Wyvern Wings to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] Wyvern Wing - Elder Wyverns</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Elder Wyverns -->

		<If Condition="(ItemCount(12636) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 55">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 55 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 54">
				<LogMessage Message="You need more Wyvern Wings!" />
				<If Condition="not IsOnMap(400)">
					<If Condition="Managers.WorldManager.HasAetheryteId(78)">
						<TeleportTo Name="Moghome" AetheryteId="78" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(78)">
						<If Condition="Managers.WorldManager.HasAetheryteId(79)">
							<TeleportTo Name="Zenith" AetheryteId="79" />
						</If>
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(79)">
						<Travel To="400" />
					</If>
				</If>
				<NoCombatMoveTo Name="Farming Area" XYZ="161.0795, 49.71581, 276.5164" />
				<Grind grindRef="Wyvern_Wing" while="(ItemCount(12636) != &MatCount;) or (ItemCount(12636) &lt; &MatCount;)" />
			</If>
		</If>
		<If Condition="(ItemCount(12636) == &MatCount;) or (ItemCount(12636) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Wyvern Wings!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Wyvern_Wing">
			<Hotspots>
				<Hotspot Radius="250" XYZ="161.0795, 49.71581, 276.5164" name="Elder Wyverns" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="3628" /> <!-- Elder Wyvern -->
			</TargetMobs>
			<MinLevel>55</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
	<CodeChunks>
	</CodeChunks>
</Profile>