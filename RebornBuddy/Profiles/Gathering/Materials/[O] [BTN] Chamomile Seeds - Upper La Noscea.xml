<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Chamomile Seeds to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [BTN] Chamomile Seeds - Upper La Noscea</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Chamomile Seeds -->

		<If Condition="(ItemCount(7740) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 24">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 24 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 23">
				<LogMessage Message="You need more Chamomile Seeds!" />
				<If Condition="not IsOnMap(139)">
					<If Condition="not IsOnMap(138)">
						<If Condition="Managers.WorldManager.HasAetheryteId(14)">
							<TeleportTo Name="Aleport" AetheryteId="14" />
						</If>
						<If Condition="not Managers.WorldManager.HasAetheryteId(14)">
							<Travel To="138" />
						</If>
					</If>
					<Travel To="139" />
				</If>
				<NoCombatMoveTo Name="Farming Area" XYZ="-357.8316, -1.374854, 168.1623" />
				<Gather while="(ItemCount(7740) &lt; &MatCount;)">
					<GatherObject>Lush Vegetation Patch</GatherObject>
					<HotSpots>
						<HotSpot Radius="90" XYZ="-357.8316, -1.374854, 168.1623" name="Lush Vegetation Patch" />
						<HotSpot Radius="90" XYZ="-431.1957, -2.45465, 136.5387" name="Lush Vegetation Patch" />
					</HotSpots>
					<ItemNames>
						<ItemName>Chamomile Seeds</ItemName>
						<ItemName>Earth Shard</ItemName>
					</ItemNames>
					<GatheringSkillOrder>
						<GatheringSkill SpellName="Blessed Harvest II" ActionId="224" TimesToCast="1" />
					</GatheringSkillOrder>
				</Gather>
			</If>
		</If>
		<If Condition="(ItemCount(7740) == &MatCount;) or (ItemCount(7740) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Chamomile Seeds!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
</Profile>