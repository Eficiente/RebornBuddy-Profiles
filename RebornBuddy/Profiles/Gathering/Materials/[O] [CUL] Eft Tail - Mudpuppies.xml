<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Eft Tails to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [CUL] Eft Tail - Mudpuppies</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Mudpuppies -->

		<If Condition="(ItemCount(4769) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 47">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 47 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 46">
				<LogMessage Message="You need more Eft Tails!" />
				<If Condition="not IsOnMap(155)">
					<If Condition="Managers.WorldManager.HasAetheryteId(23)">
						<TeleportTo Name="Camp Dragonhead" AetheryteId="23" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(23)">
						<Travel To="155" />
					</If>
				</If>
				<NoCombatMoveTo Name="Mudpuppies" XYZ="-83.37112, 209.5405, 456.7819" />
				<Grind grindRef="Eft_Tail" while="(ItemCount(4769) != &MatCount;) or (ItemCount(4769) &lt; &MatCount;)" />
			</If>
		</If>
		<If Condition="(ItemCount(4769) == &MatCount;) or (ItemCount(4769) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Eft Tails!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Eft_Tail">
			<Hotspots>
				<Hotspot Radius="250" XYZ="-223.8449, 219.1363, 473.0182" name="Mudpuppies" />
				<Hotspot Radius="250" XYZ="-496.742, 234.2795, 418.2366" name="Mudpuppies" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="645" />
			</TargetMobs>
			<MinLevel>47</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
	<CodeChunks>
	</CodeChunks>
</Profile>