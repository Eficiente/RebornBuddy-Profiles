<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Garlean Steel Joints to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] Garlean Steel Joint - Magitek Vanguards</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Magitek Vanguard -->

		<If Condition="(ItemCount(5104) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 50">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 50 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 49">
				<LogMessage Message="You need more Garlean Steel Joints!" />
				<If Condition="not IsOnMap(147)">
					<If Condition="Managers.WorldManager.HasAetheryteId(22)">
						<TeleportTo Name="Ceruleum Processing Plant" AetheryteId="22" />
					</If>
					<If Condition="Managers.WorldManager.HasAetheryteId(21)">
						<TeleportTo Name="Camp Bluefog" AetheryteId="21" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(21)">
						<Travel To="147" />
					</If>
				</If>
				<Grind grindRef="Garlean_Steel_Joint" while="Core.Player.ClassLevel &lt; 61" />
			</If>
		</If>
		<If Condition="(ItemCount(5104) == &MatCount;) or (ItemCount(5104) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Garlean Steel Joints!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Garlean_Steel_Joint">
			<Hotspots>
				<Hotspot Radius="90" XYZ="-204.1779, 73.05789, -144.1113" name="Magitek Vanguard" />
				<Hotspot Radius="90" XYZ="-193.9883, 78.87093, -223.697" name="Magitek Vanguard" />
				<Hotspot Radius="90" XYZ="-201.232, 82.59113, -291.6395" name="Magitek Vanguard" />
				<Hotspot Radius="90" XYZ="-263.1522, 84.56665, -275.6183" name="Magitek Vanguard" />
				<Hotspot Radius="90" XYZ="-270.522, 83.92373, -186.8876" name="Magitek Vanguard" />
				<Hotspot Radius="90" XYZ="-246.5598, 78.51331, -156.3168" name="Magitek Vanguard" />
			</Hotspots>
			<AvoidMobs>
				<AvoidMob Id="58" />
				<AvoidMob Id="59" />
				<AvoidMob Id="60" />
				<AvoidMob Id="61" />
				<AvoidMob Id="2944" />
			</AvoidMobs>
			<TargetMobs>
				<TargetMob Id="269" />
			</TargetMobs>
			<MinLevel>50</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
</Profile>