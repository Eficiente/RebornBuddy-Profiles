<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Walnut Logs to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [BTN] Walnut Log - South Shroud</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Walnut Log -->

		<If Condition="(ItemCount(5388) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 24">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 24 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 23">
				<LogMessage Message="You need more Walnut Logs!" />
				<If Condition="not IsOnMap(153)">
					<If Condition="Managers.WorldManager.HasAetheryteId(5)">
						<TeleportTo Name="Quarrymill" AetheryteId="5" />
					</If>
					<If Condition="Managers.WorldManager.HasAetheryteId(6)">
						<TeleportTo Name="Camp Tranquil" AetheryteId="6" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(6)">
						<Travel To="153" />
					</If>
				</If>
				<NoCombatMoveTo Name="Farming Area" XYZ="128.4685, 9.05062, 3.90166" />
			    <Gather>
					<GatherObject>Mature Tree</GatherObject>
					<HotSpots>
						<HotSpot Radius="90" XYZ="128.4685, 9.05062, 3.90166" name="Mature Tree" />
						<HotSpot Radius="90" XYZ="48.87763, 5.438043, 19.7875" name="Mature Tree" />
					</HotSpots>
					<ItemNames>
						<ItemName>Walnut Log</ItemName>
					</ItemNames>
					<GatheringSkillOrder>
						<GatheringSkill SpellName="Leaf Turn" ActionId="225" TimesToCast="1" />
					</GatheringSkillOrder>
			  	</Gather>
			</If>
		</If>
		<If Condition="(ItemCount(5388) == &MatCount;) or (ItemCount(5388) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Walnut Logs!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
</Profile>
