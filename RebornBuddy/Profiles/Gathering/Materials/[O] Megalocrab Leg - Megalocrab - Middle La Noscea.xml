<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Megalocrab Legs to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] Megalocrab Leg - Megalocrab - Middle La Noscea</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Megalocrab -->

		<If Condition="(ItemCount(4771) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 12">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 12 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 11">
				<LogMessage Message="You need more Megalocrab Legs!" />
				<If Condition="not IsOnMap(134)">
					<If Condition="Managers.WorldManager.HasAetheryteId(52)">
						<TeleportTo Name="Summerford Farms" AetheryteId="52" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(52)">
						<Travel To="134" />
					</If>
				</If>
				<Grind grindRef="Megalocrab_Leg" while="Core.Player.ClassLevel &lt; 61" />
			</If>
		</If>
		<If Condition="(ItemCount(4771) == &MatCount;) or (ItemCount(4771) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Megalocrab Legs!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Megalocrab_Leg">
			<Hotspots>
				<Hotspot Radius="90" XYZ="-232.9819, 14.46945, -342.1964" name="Megalocrab" />
				<Hotspot Radius="90" XYZ="-347.9821, 24.19374, -399.1082" name="Megalocrab" />
				<Hotspot Radius="90" XYZ="-323.5222, 13.68671, -306.659" name="Megalocrab" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="561" />
			</TargetMobs>
			<MinLevel>12</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
</Profile>