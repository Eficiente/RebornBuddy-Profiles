<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Peiste Skin to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [LTW] Peiste Skin - Peiste Mobs</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Rockskin Peiste, Sandskin Peiste -->

		<If Condition="(ItemCount(5306) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 25">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 25 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 24">
				<LogMessage Message="You need more Peiste Skin!" />
				<If Condition="not IsOnMap(146)">
					<If Condition="Managers.WorldManager.HasAetheryteId(19)">
						<TeleportTo Name="Little Ala Mhigo" AetheryteId="19" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(19)">
						<Travel To="146" />
					</If>
				</If>
				<Grind grindRef="Peiste_Skin" while="Core.Player.ClassLevel &lt; 61" />
			</If>
		</If>
		<If Condition="(ItemCount(5306) == &MatCount;) or (ItemCount(5306) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Peiste Skin!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Peiste_Skin">
			<Hotspots>
				<Hotspot Radius="90" XYZ="-294.091, 20.40638, -331.6211" name="Peiste Mobs" />
				<Hotspot Radius="90" XYZ="-214.4815, 21.4475, -525.2601" name="Peiste Mobs" />
				<Hotspot Radius="90" XYZ="-83.58411, 5.970957, -600.4368" name="Peiste Mobs" />
				<Hotspot Radius="90" XYZ="-23.11708, 3.766378, -547.3219" name="Peiste Mobs" />
				<Hotspot Radius="90" XYZ="-68.34543, 19.78356, -440.4822" name="Peiste Mobs" />
				<Hotspot Radius="90" XYZ="-177.2625, 23.51783, -483.3023" name="Peiste Mobs" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="303" />
				<TargetMob Id="1993" />
			</TargetMobs>
			<MinLevel>25</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
</Profile>