]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] Okeanis Egg &amp; Tail - Okeanises</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Okeanis -->

		<If Condition="(ItemCount(12872) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 59">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 59 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 58">
				<LogMessage Message="You need more Okeanis Eggs!" />
				<If Condition="not IsOnMap(399)">
					<If Condition="not IsOnMap(478)">
						<If Condition="Managers.WorldManager.HasAetheryteId(75)">
							<TeleportTo Name="Idyllshire" AetheryteId="75" />
						</If>
						<If Condition="not Managers.WorldManager.HasAetheryteId(75)">
							<Travel To="478" />
						</If>
					</If>
					<Travel To="399_West" />
				</If>
				<NoCombatMoveTo Name="Farming Area" XYZ="-657.2515, 139.9153, 400.827" />
				<Grind grindRef="Okeanis_Egg" while="(ItemCount(12872) &lt; &MatCount;)" />
			</If>
		</If>

		<If Condition="(ItemCount(12875) &lt; &Mat2Count;)">
			<If Condition="Core.Player.ClassLevel &lt; 59">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 59 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 58">
				<LogMessage Message="You need more Okeanis Tails!" />
				<If Condition="not IsOnMap(399)">
					<If Condition="not IsOnMap(478)">
						<If Condition="Managers.WorldManager.HasAetheryteId(75)">
							<TeleportTo Name="Idyllshire" AetheryteId="75" />
						</If>
						<If Condition="not Managers.WorldManager.HasAetheryteId(75)">
							<Travel To="478" />
						</If>
					</If>
					<Travel To="399_West" />
				</If>
				<NoCombatMoveTo Name="Farming Area" XYZ="-657.2515, 139.9153, 400.827" />
				<Grind grindRef="Okeanis_Tail" while="(ItemCount(12875) &lt; &Mat2Count;)" />
			</If>
		</If>

		<LogMessage Message="You've gathered &MatCount;+ Okeanis Eggs and &Mat2Count;+ Okeanis Tails!" />
		<If Condition="not IsOnMap(129)">
			<If Condition="Managers.WorldManager.HasAetheryteId(8)">
				<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
			</If>
			<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
				<Travel To="129" />
			</If>
		</If>

	</Order>
