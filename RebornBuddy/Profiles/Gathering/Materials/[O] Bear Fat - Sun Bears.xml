<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Bear Fat to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] Bear Fat - Sun Bears</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Sun Bear -->

		<If Condition="(ItemCount(12609) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 58">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 58 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 57">
				<LogMessage Message="You need more Bear Fat!" />
				<If Condition="not IsOnMap(399)">
					<If Condition="not IsOnMap(478)">
						<If Condition="Managers.WorldManager.HasAetheryteId(75)">
							<TeleportTo Name="Idyllshire" AetheryteId="75" />
						</If>
						<If Condition="not Managers.WorldManager.HasAetheryteId(75)">
							<Travel To="478" />
						</If>
					</If>
					<Travel To="399_West" />
				</If>
				<NoCombatMoveTo Name="Farming Area" XYZ="-702.9989, 152.0379, -140.5097" />
				<Grind grindRef="Bear_Fat" while="(ItemCount(12609) != &MatCount;) or (ItemCount(12609) &lt; &MatCount;)" />
			</If>
		</If>
		<If Condition="(ItemCount(12609) == &MatCount;) or (ItemCount(12609) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Bear Fat!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Bear_Fat">
			<Hotspots>
				<Hotspot Radius="250" XYZ="-795.2919, 147.857, -66.89534" name="Sun Bears" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="3606" /> <!-- Sun Bear -->
			</TargetMobs>
			<MinLevel>58</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
	<CodeChunks>
	</CodeChunks>
</Profile>