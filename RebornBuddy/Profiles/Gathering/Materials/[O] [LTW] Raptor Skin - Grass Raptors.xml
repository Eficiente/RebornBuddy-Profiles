<!-- User Configuration -->
<!DOCTYPE Profile [
  <!ENTITY MatCount "2000"> <!-- Raptor Skin to gather before stopping. -->
]>
<!-- End User Configuration -->

<Profile>
	<Name>[O] [LTW] Raptor Skin - Grass Raptors</Name>
	<BehaviorDirectory>../../Quest Behaviors</BehaviorDirectory>
	<KillRadius>90</KillRadius>
	<Order>

		<!-- Grass Raptor -->

		<If Condition="(ItemCount(5310) &lt; &MatCount;)">
			<If Condition="Core.Player.ClassLevel &lt; 30">
				<LogMessage Message="You do not meet the minimum level requirement." />
				<LogMessage Message="Please reach level 30 or higher." />
				<StopBot />
			</If>
			<If Condition="Core.Player.ClassLevel &gt; 29">
				<LogMessage Message="You need more Raptor Skin!" />
				<If Condition="not IsOnMap(137)">
					<If Condition="Managers.WorldManager.HasAetheryteId(12)">
						<TeleportTo Name="Wineport" AetheryteId="12" />
					</If>
					<If Condition="not Managers.WorldManager.HasAetheryteId(12)">
						<Travel To="137" />
					</If>
				</If>
				<Grind grindRef="Raptor_Skin" while="Core.Player.ClassLevel &lt; 61" />
			</If>
		</If>
		<If Condition="(ItemCount(5310) == &MatCount;) or (ItemCount(5310) &gt; &MatCount;)">
			<LogMessage Message="You've gathered &MatCount;+ Raptor Skin!" />
			<If Condition="not IsOnMap(129)">
				<If Condition="Managers.WorldManager.HasAetheryteId(8)">
					<TeleportTo Name="Limsa Lominsa Lower Decks" AetheryteId="8" />
				</If>
				<If Condition="not Managers.WorldManager.HasAetheryteId(8)">
					<Travel To="129" />
				</If>
			</If>
			<StopBot />
		</If>

	</Order>
	<GrindAreas>
		<GrindArea name="Raptor_Skin">
			<Hotspots>
				<Hotspot Radius="90" XYZ="105.3352, 81.41289, -74.68613" name="Grass Raptor" />
				<Hotspot Radius="90" XYZ="148.6704, 71.49593, -14.45549" name="Grass Raptor" />
				<Hotspot Radius="90" XYZ="55.55973, 61.14231, 56.43181" name="Grass Raptor" />
			</Hotspots>
			<TargetMobs>
				<TargetMob Id="411" />
			</TargetMobs>
			<MinLevel>30</MinLevel>
			<MaxLevel>61</MaxLevel>
		</GrindArea>
	</GrindAreas>
</Profile>